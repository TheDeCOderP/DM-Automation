generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Platform {
  ALL
  GOOGLE
  MEDUIM
  PINTEREST
  QUORA
  REDDIT
  LINKEDIN
  TWITTER
  FACEBOOK
  INSTAGRAM
}

enum Frequency {
  IMMEDIATELY
  ONCE
  HOURLY
  DAILY
  WEEKLY
  MONTHLY
}

enum Status {
  DRAFTED
  SCHEDULED
  PUBLISHED
  FAILED
}

enum MediaType {
  IMAGE
  VIDEO
  CAROUSEL
}

enum NotificationType {
  POST_PUBLISHED
  POST_FAILED
  POST_SCHEDULED
  ACCOUNT_DISCONNECTED
  SUBSCRIPTION_RENEWAL
  GENERAL
}


model Account {
  id                       String   @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?  @db.Text
  access_token             String?  @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?  @db.Text
  session_state            String?
  refresh_token_expires_in Int?
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt
  user                     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String?
  image         String?
  password      String?
  role          Role           @default(USER)
  emailVerified DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  socialAccounts  SocialAccount[]
  notifications   Notification[]
  media           Media[]
  posts           Post[]
  brands          UserBrand[]

  accounts      Account[]
  sessions      Session[]
}

model Brand {
  id          String       @id @default(cuid())
  name        String
  description String?
  logo        String?
  website     String?
  deleted     Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  members     UserBrand[]
  posts       Post[]
  media       Media[]
  socialAccounts SocialAccount[]
}

model UserBrand {
  id        String   @id @default(cuid())
  userId    String
  brandId   String
  role      Role     @default(USER) // You might want a specific BrandRole enum
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
  brand     Brand    @relation(fields: [brandId], references: [id])

  @@unique([userId, brandId])
  @@index([userId])
  @@index([brandId])
}

model SocialAccount {
  id               String       @id @default(cuid())
  platform         Platform
  accessToken      String       @db.LongText
  accessTokenSecret String?     @db.Text
  refreshToken     String?      @db.LongText
  tokenExpiresAt   DateTime?
  platformUserId   String
  platformUsername String
  platformUserImage String?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  user             User         @relation(fields: [userId], references: [id])
  userId           String
  isConnected      Boolean      @default(true)

  brandId          String
  brand            Brand        @relation(fields: [brandId], references: [id])

  pageTokens       PageToken[]
  
  @@unique([userId, platform, brandId])
  @@index([userId])
}

model PageToken {
  id               String       @id @default(cuid())
  pageId           String       
  pageName         String 
  accessToken      String       @db.LongText
  tokenExpiresAt   DateTime?
  isActive         Boolean      @default(true)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  
  socialAccount    SocialAccount @relation(fields: [socialAccountId], references: [id])
  socialAccountId  String

  posts            Post[]

  @@unique([pageId])
  @@unique([pageId, socialAccountId])
  @@index([socialAccountId])
}

model Post {
  id           String   @id @default(cuid())
  userId       String
  content      String   @db.Text
  platform     Platform
  publishedAt  DateTime?
  scheduledAt  DateTime?
  frequency    Frequency?
  status       Status   @default(DRAFTED)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  media        Media[]

  brandId      String
  brand        Brand   @relation(fields: [brandId], references: [id])

  pageTokenId  String?
  pageToken    PageToken? @relation(fields: [pageTokenId], references: [id])

  user         User     @relation(fields: [userId], references: [id])
}

model Media {
  id        String   @id @default(cuid())
  url       String
  type      MediaType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  postId    String
  post      Post     @relation(fields: [postId], references: [id])

  brandId   String 
  brand     Brand  @relation(fields: [brandId], references: [id])

  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Notification {
  id          String            @id @default(cuid())
  userId      String
  type        NotificationType
  title       String
  message     String
  read        Boolean           @default(false)
  metadata    Json?             // store extra info like postId, platform, etc.
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
}
